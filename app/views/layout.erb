<!DOCTYPE html>
<html>
<head>
  <title>Mongo Browser</title>
  <link href="/assets/application.css" rel="stylesheet" media="screen">
</head>
<body>
  <div class="navbar navbar navbar-fixed-top">
    <div class="navbar-inner">
      <div class="container">
        <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </a>
        <a class="brand" href="/">Mongo Browser</a>
        <div class="nav-collapse collapse">
          <ul class="nav">
            <li><a href="/server_info">Server Info</a></li>
          </ul>
        </div>
      </div>
    </div>
  </div>

  <div class="container">
    <% if params[:db_name] %>
      <ul class="breadcrumb">
        <li><a href="/">Databases</a><span class="divider">/</span></li>
        <li><a href="/databases/<%= params[:db_name] %>">db: activecell_development</a>

        <% if params[:collection_name] %>
          <span class="divider">/</span></li>
          <li class="active">collection: <%= params[:collection_name] %></li>
        <% end %>
      </ul>
    <% end %>

    <%= yield %>
  </div>

  <script src="/assets/application.js"></script>
</body>
</html>
