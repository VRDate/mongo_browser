<h2>Available databases</h2>

<table class="table table-striped">
  <thead>
  <tr>
    <th>Name</th>
    <th>Size</th>
  </tr>
  </thead>
  <tbody>
  <tr>
    <% @databases.each do |db_name, db_size| %>
    <tr>
      <td><a href="/databases/<%= db_name %>"><%= db_name %></a></td>
      <td><%= db_size %></td>
    </tr>
  <% end %>
  </tbody>
</table>
